{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true // required due to got esm compile error - https://github.com/sindresorhus/got/issues/2051
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
